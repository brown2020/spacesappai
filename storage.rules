rules_version = '2';

// ============================================================================
// FIREBASE STORAGE SECURITY RULES FOR SPACES APP
// ============================================================================
//
// Storage Structure (if implementing file uploads):
//   documents/{documentId}/attachments/{filename}  - Document attachments
//   users/{userId}/avatar/{filename}               - User profile images
//
// Copy this entire file to Firebase Console > Storage > Rules
// ============================================================================

service firebase.storage {
  match /b/{bucket}/o {

    // ========================================================================
    // HELPER FUNCTIONS
    // ========================================================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Get the user's email from auth token
    function getUserEmail() {
      return request.auth.token.email;
    }

    // Check file size (max 10MB for attachments)
    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Check file size for avatars (max 2MB)
    function isValidAvatarSize() {
      return request.resource.size < 2 * 1024 * 1024;
    }

    // Check if file is an allowed image type
    function isImageType() {
      return request.resource.contentType.matches('image/.*');
    }

    // Check if file is an allowed document type
    function isAllowedFileType() {
      return request.resource.contentType.matches('image/.*')
        || request.resource.contentType.matches('application/pdf')
        || request.resource.contentType.matches('text/.*')
        || request.resource.contentType.matches('application/json');
    }

    // ========================================================================
    // DOCUMENT ATTACHMENTS
    // ========================================================================

    // Files uploaded to documents
    // Path: documents/{documentId}/attachments/{filename}
    match /documents/{documentId}/attachments/{filename} {
      // Anyone with document access can read attachments
      // Note: For proper security, you'd check Firestore for room access
      // This simplified version allows authenticated users to read
      allow read: if isAuthenticated();

      // Allow upload if authenticated with valid file
      allow write: if isAuthenticated()
        && isValidFileSize()
        && isAllowedFileType();

      // Allow delete if authenticated
      allow delete: if isAuthenticated();
    }

    // ========================================================================
    // USER AVATARS
    // ========================================================================

    // User profile images
    // Path: users/{userId}/avatar/{filename}
    match /users/{userId}/avatar/{filename} {
      // Anyone can read avatars (for display in UI)
      allow read: if true;

      // Only the user can upload their own avatar
      allow write: if isAuthenticated()
        && request.auth.uid == userId
        && isValidAvatarSize()
        && isImageType();

      // Only the user can delete their avatar
      allow delete: if isAuthenticated()
        && request.auth.uid == userId;
    }

    // ========================================================================
    // PUBLIC ASSETS
    // ========================================================================

    // Public files (if needed for shared resources)
    // Path: public/{filename}
    match /public/{filename} {
      // Anyone can read public files
      allow read: if true;

      // Only authenticated users can upload to public
      // In production, you might want to restrict this further
      allow write: if isAuthenticated()
        && isValidFileSize();
    }

    // ========================================================================
    // TEMPORARY UPLOADS
    // ========================================================================

    // Temporary upload area (for processing before moving to final location)
    // Path: temp/{userId}/{filename}
    match /temp/{userId}/{filename} {
      // Only the uploader can access their temp files
      allow read, write: if isAuthenticated()
        && request.auth.uid == userId
        && isValidFileSize();

      // Allow delete for cleanup
      allow delete: if isAuthenticated()
        && request.auth.uid == userId;
    }

    // ========================================================================
    // CATCH-ALL DENY
    // ========================================================================

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
